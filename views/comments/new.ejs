<% include ../partials/header %>
<div class="container text-center">
    <div class="row">
            <h1>Add a new comment to <%= campground.name %></h1>
            <form method="POST" action="/campgrounds/<%= campground.id %>/comments" style="width:40%; margin: 25px auto;">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Text" name="comment[text]">
                </div>
                <div class="form-group">
                    <button class="btn btn-info btn-lg btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
    </div>
</div>
<% include ../partials/footer %>